            "module": "uvicorn",
            "args": [
                "examples.scheduler.main:app",
                "--reload",
            ],
            "justMyCode": false
        },
        {
            "name": "FastAPI: Test",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "test:app",
                "--reload",
